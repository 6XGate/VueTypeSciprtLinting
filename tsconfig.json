{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "ES2019",
        "module": "esnext",
        "sourceMap": true,
        "allowJs": false,
        "checkJs": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true
    }
}
